<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_500">


        <include
            android:id="@+id/fragment_list_headlines_toolbar"
            layout="@layout/layout_toolbar"
            app:isImageButtonVisible="@{false}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/title_news}" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_list_headlines_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_zero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_list_headlines_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>