<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_marginEnd="@dimen/spacing_m"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Privet"/>

            <ImageView
                android:id="@+id/fragment_news_image"
                android:layout_width="@dimen/size_zero"
                android:layout_height="@dimen/size_250"
                android:scaleType="fitXY"
                android:src="@drawable/not_available"
                app:layout_constraintStart_toStartOf="@id/fragment_news_title"
                app:layout_constraintEnd_toEndOf="@id/fragment_news_title"
                app:layout_constraintTop_toBottomOf="@id/fragment_news_title"
                android:layout_marginTop="@dimen/spacing_s"
                />

            <TextView
                android:id="@+id/fragment_news_author"
                android:layout_width="@dimen/size_zero"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/fragment_news_image"
                app:layout_constraintTop_toBottomOf="@id/fragment_news_image"
                app:layout_constraintEnd_toEndOf="@id/fragment_news_image"
                android:layout_marginTop="@dimen/spacing_s"
                android:textSize="@dimen/text_size_xs2"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey_700"
                tools:text="Mia"/>

            <TextView
                android:id="@+id/fragment_news_time"
                android:layout_width="@dimen/size_zero"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/fragment_news_author"
                app:layout_constraintTop_toBottomOf="@id/fragment_news_author"
                app:layout_constraintEnd_toEndOf="@id/fragment_news_author"
                android:layout_marginTop="@dimen/spacing_s"
                android:textSize="@dimen/text_size_xs2"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                tools:text="Mia"/>

            <TextView
                android:id="@+id/fragment_news_description"
                android:layout_width="@dimen/size_zero"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/fragment_news_time"
                app:layout_constraintTop_toBottomOf="@id/fragment_news_time"
                app:layout_constraintEnd_toEndOf="@id/fragment_news_time"
                android:layout_marginTop="@dimen/spacing_s"
                android:textSize="@dimen/text_size_s"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                tools:text="Mia"/>

            <TextView
                android:id="@+id/fragment_news_content"
                android:layout_width="@dimen/size_zero"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/fragment_news_description"
                app:layout_constraintTop_toBottomOf="@id/fragment_news_description"
                app:layout_constraintEnd_toEndOf="@id/fragment_news_description"
                android:layout_marginTop="@dimen/spacing_s"
                android:textSize="@dimen/text_size_s"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                tools:text="Mia"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>